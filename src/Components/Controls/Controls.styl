/**
 * Controls
 */

.components-panel

	.mbc-panel_body
		padding 0

		> h2.components-panel__body-title
			margin 0

		h2:hover
		button:focus
			background transparent

.mbc-panel_body

	.components-base-control__label
		margin-bottom 15px

	.components-base-control__help
		font-style normal
		margin-top 15px
		opacity .8

	.components-base-control__label
	.components-checkbox-control__label
		font-weight 500

.mbc-control-radio

	.components-base-control__label
		margin-bottom 15px

+prefix-classes('mbc-')

	.control-image
		cursor pointer

	.selected-full
		+ .content_maxwidth
			opacity .3
			pointer-events none

	.background_image-buttons
		display flex

		button
			margin-right 10px
		svg
			width 17px
			height 100%
			margin-left -5px
			margin-right 5px

div.components-panel

	+prefix-classes('mbc-')

		.panel_body

			.control
				position relative
				padding 2em 1.2em
				width 100%
				margin 0

				+ .control
					padding-top 0

			.border_width
			.border_color
			.border_color_opacity

				+ .shadow_width
				+ .shadow_color
				+ .shadow_color_opacity
					padding-top 2em
					border-top 1px dotted rgba(0,0,0,0.1)

			.padding
			.padding_top
			.padding_bottom
			.padding_left
			.padding_right
			.padding_topbottom
			.padding_leftright

				+ .padding_small_screen
				+ .padding_top_small_screen
				+ .padding_bottom_small_screen
				+ .padding_left_small_screen
				+ .padding_right_small_screen
				+ .padding_topbottom_small_screen
				+ .padding_leftright_small_screen
					padding-top 2em
					border-top 1px dotted rgba(0,0,0,0.1)

.mbc-control-colorpalette

	.components-base-control__label
		display flex
		align-items center
