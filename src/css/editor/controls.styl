/*
 * Controls
 */

.components-panel

	.mbc-panel_body
		padding 0

		> h2.components-panel__body-title
			margin 0

		h2:hover
		button:focus
			background transparent

.components-panel .mbc-panel_body

	.mbc-control
		position relative
		padding 2em 1.2em
		width 100%
		margin 0

		+ .mbc-control
			padding-top 0

.mbc-panel_body

	.components-base-control__label
		margin-bottom 15px

	.components-base-control__help
		font-style normal
		margin-top 15px
		opacity .8

	.components-base-control__label
	.components-checkbox-control__label
		font-weight 500

.mbc-control-radio

	.components-base-control__label
		margin-bottom 15px

.mbc-control-image
	cursor pointer

.mbc-selected-full
	+ .mbc-content_maxwidth
		opacity .3
		pointer-events none

div.components-panel .mbc-panel_body
	.mbc-border_width
	.mbc-border_color
	.mbc-border_color_opacity
		+ .mbc-shadow_width
		+ .mbc-shadow_color
		+ .mbc-shadow_color_opacity
			padding-top 2em
			border-top 1px dotted rgba(0,0,0,0.1)
	.mbc-padding
	.mbc-padding_top
	.mbc-padding_bottom
	.mbc-padding_left
	.mbc-padding_right
	.mbc-padding_topbottom
	.mbc-padding_leftright
		+ .mbc-padding_small_screen
		+ .mbc-padding_top_small_screen
		+ .mbc-padding_bottom_small_screen
		+ .mbc-padding_left_small_screen
		+ .mbc-padding_right_small_screen
		+ .mbc-padding_topbottom_small_screen
		+ .mbc-padding_leftright_small_screen
			padding-top 2em
			border-top 1px dotted rgba(0,0,0,0.1)

.mbc-control-colorpalette
	.components-base-control__label
		display flex
		align-items center
