/*
 * Layout
 */

.mbc-content_align-right
	margin-left auto

.mbc-content_align-center
	margin 0 auto

.mbc-container
	position relative

.mbc-content
	position relative
	display block
	width 100%

.mbc-background
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	color transparent
	background-color transparent
	border-color transparent
	background-repeat no-repeat
	background-size cover
	background-position center

	&:after
		content ""
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		color inherit
		background-color inherit
		border-color inherit

	&:empty:after
		background-color transparent

	.mbc-background-image
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		object-fit cover

div.mbc-content_align-full
	max-width none
