/*
 * Padding
 */

for num in (0..200)
	if num % 5 == 0
		.mbc-padding_topbottom-{num}
			padding-top (num)px
			padding-bottom (num)px
		.mbc-padding_top-{num}
			padding-top (num)px
		.mbc-padding_bottom-{num}
			padding-bottom (num)px

for num in (0..100)
	if num % 5 == 0
		.mbc-padding_leftright-{num}
			padding-left (num)px
			padding-right (num)px
		.mbc-padding_left-{num}
			padding-left (num)px
		.mbc-padding_right-{num}
			padding-right (num)px
		.mbc-padding-{num}
			padding (num)px

@media (max-width: 600px)
	for num in (0..200)
		if num % 5 == 0
			.mbc-padding_topbottom_small_screen-{num}
				padding-top (num)px
				padding-bottom (num)px
			.mbc-padding_top_small_screen-{num}
				padding-top (num)px
			.mbc-padding_bottom_small_screen-{num}
				padding-bottom (num)px

@media (max-width: 600px)
	for num in (0..100)
		if num % 5 == 0
			.mbc-padding_leftright_small_screen-{num}
				padding-left (num)px
				padding-right (num)px
			.mbc-padding_left_small_screen-{num}
				padding-left (num)px
			.mbc-padding_right_small_screen-{num}
				padding-right (num)px
			.mbc-padding_small_screen-{num}
				padding (num)px

div.components-panel .mbc-panel_body
	.mbc-padding
	.mbc-padding_top
	.mbc-padding_bottom
	.mbc-padding_left
	.mbc-padding_right
	.mbc-padding_topbottom
	.mbc-padding_leftright
		+ .mbc-padding_small_screen
		+ .mbc-padding_top_small_screen
		+ .mbc-padding_bottom_small_screen
		+ .mbc-padding_left_small_screen
		+ .mbc-padding_right_small_screen
		+ .mbc-padding_topbottom_small_screen
		+ .mbc-padding_leftright_small_screen
			padding-top 2em
			border-top 1px dotted rgba(0,0,0,0.1)
