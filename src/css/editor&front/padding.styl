/*
 * Padding
 */

+prefix-classes('mbc-')

	for num in (0..200)
		if num % 5 == 0
			.padding_topbottom-{num}
				padding-top (num)px
				padding-bottom (num)px
			.padding_top-{num}
				padding-top (num)px
			.padding_bottom-{num}
				padding-bottom (num)px

	for num in (0..100)
		if num % 5 == 0
			.padding_leftright-{num}
				padding-left (num)px
				padding-right (num)px
			.padding_left-{num}
				padding-left (num)px
			.padding_right-{num}
				padding-right (num)px
			.padding-{num}
				padding (num)px

	@media (max-width: 600px)
		for num in (0..200)
			if num % 5 == 0
				.padding_topbottom_small_screen-{num}
					padding-top (num)px
					padding-bottom (num)px
				.padding_top_small_screen-{num}
					padding-top (num)px
				.padding_bottom_small_screen-{num}
					padding-bottom (num)px

	@media (max-width: 600px)
		for num in (0..100)
			if num % 5 == 0
				.padding_leftright_small_screen-{num}
					padding-left (num)px
					padding-right (num)px
				.padding_left_small_screen-{num}
					padding-left (num)px
				.padding_right_small_screen-{num}
					padding-right (num)px
				.padding_small_screen-{num}
					padding (num)px
